surnames = ("Бондаренко","Симоненко","Кузнецова","Коваль","Стефанчук","Стрілецька","Романенко")
marks = [[6,2,10],[5,9,12],[10,4,2],[11,8,10],[10,10,11],[11,1,5],[5,4,1]]
average = 0
s = 0
while s < len(surnames):
    for i in range(len(marks)):
        for j in range(len(marks[i])):
            average += marks[i][j]
        print (surnames[s],":",average/3)
        s+=1
        average = 0
